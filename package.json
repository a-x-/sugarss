{
  "name": "sugarss",
  "version": "2.0.0",
  "description": "Indent-based CSS syntax for PostCSS",
  "keywords": [
    "css",
    "postcss",
    "postcss-syntax",
    "syntax",
    "indent",
    "parser"
  ],
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "postcss/sugarss",
  "peerDependencies": {
    "postcss": "7"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.3",
    "@babel/preset-env": "^7.3.1",
    "@logux/eslint-config": "^27.0.0",
    "babel-eslint": "^10.0.1",
    "babel-plugin-add-module-exports": "^1.0.0",
    "clean-publish": "^1.1.0",
    "eslint": "^5.14.1",
    "eslint-config-postcss": "^3.0.7",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.3.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.4",
    "postcss": "^7.0.14",
    "postcss-parser-tests": "^6.3.1"
  },
  "scripts": {
    "lint-staged": "lint-staged",
    "prepack": "npm run build",
    "clean": "rm *.js || echo 'Already cleaned'",
    "build": "npm run clean && babel -s inline -d ./ *.es6",
    "lint": "eslint *.es6 test/*.js",
    "test": "npm run build && jest && npm run lint"
  },
  "browserslist": [
    "last 2 version",
    "not dead",
    "not Explorer 11",
    "not ExplorerMobile 11",
    "node 6"
  ],
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "loose": true
        }
      ]
    ],
    "plugins": [
      "add-module-exports"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "sourceType": "module"
    },
    "extends": "eslint-config-postcss",
    "rules": {
      "node/no-unsupported-features/es-syntax": [
        "error",
        {
          "ignores": [
            "modules"
          ]
        }
      ]
    },
    "env": {
      "jest": true
    }
  },
  "jest": {
    "testEnvironment": "node"
  },
  "lint-staged": {
    "test/*.js": "eslint",
    "*.es6": "eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
